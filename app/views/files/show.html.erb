<div class="flex flex-col container space-y-4">
  <h1 class="detail-page-h1">
    File <mark class="detail-page-mark"><%= @file.id %></mark>
  </h1>

  <h2 class="detail-page-h2">Details</h2>
  <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
    <%= render(FileTableComponent.new(files: Array.wrap(@file), show_actions: false)) %>
  </div>

  <h2 class="detail-page-h2">Rows</h2>
  <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
    <%= render(RowTableComponent.new(rows: @file.rows)) %>
  </div>
</div>
